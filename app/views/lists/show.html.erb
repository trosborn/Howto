<p>
  <strong>Title:</strong>
  <%= @list.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @list.text %>
</p>

<h2>Add a step:</h2>
<%= form_for([@list, @list.steps.build]) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', lists_path %>
| <%= link_to 'Edit', edit_list_path(@list) %>
